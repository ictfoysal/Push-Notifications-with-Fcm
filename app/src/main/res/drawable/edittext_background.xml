<!-- edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border -->
    <stroke
        android:width="2dp"
        android:color="#C0C0C0" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

</shape>
